@page
@model NewGameModel
@{
    ViewData["Title"] = "New Game";
}
<div class="max-w-xl mx-auto mt-8 bg-green-950/80 border border-yellow-500 rounded-xl p-6 shadow">
    <h1 class="text-3xl font-bold mb-6 text-yellow-400">Start New Game</h1>
    <form method="post" class="space-y-4">
        <div>
            <label asp-for="DeckCount" class="block mb-1">Deck Count</label>
            <input asp-for="DeckCount" type="number" min="1" max="8" class="w-full px-3 py-2 rounded bg-green-900 border border-yellow-500 text-yellow-100" />
        </div>
        <div>
            <label asp-for="DefaultBet" class="block mb-1">Default Bet</label>
            <input asp-for="DefaultBet" type="number" min="1" step="1" class="w-full px-3 py-2 rounded bg-green-900 border border-yellow-500 text-yellow-100" />
        </div>
        <div>
            <label asp-for="Bankroll" class="block mb-1">Starting Bankroll</label>
            <input asp-for="Bankroll" type="number" min="50" step="10" class="w-full px-3 py-2 rounded bg-green-900 border border-yellow-500 text-yellow-100" />
        </div>
        <button type="submit" class="w-full py-3 rounded bg-green-700 hover:bg-green-600 text-yellow-200 font-semibold border border-yellow-500">Deal First Hand</button>
    </form>
</div>
