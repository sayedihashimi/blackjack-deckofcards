@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env
@using Microsoft.AspNetCore.Antiforgery
<!DOCTYPE html>
<html lang="en" class="dark h-full felt-bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BlackjackRazor</title>
    <meta name="description" content="BlackjackRazor early scaffold" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Fallback minimal styles if Tailwind build fails to load */
                html, body { height: 100%; min-height: 100%; }
                html.felt-bg, body.felt-bg {
                    background: radial-gradient(circle at 30% 30%, #115c44, #062017 85%);
                    background-attachment: fixed;
                    background-size: cover;
                }
        /* Responsive card scaling: smoothly scale card size with viewport width */
        .card-resp {
            width: clamp(2.2rem, 7vw, 4.5rem) !important;
            height: clamp(3.1rem, 10vw, 6.5rem) !important;
            font-size: clamp(0.6rem, 2vw, 1.1rem) !important;
        }
        body { overflow-x:hidden; }
    </style>
    @if (Env.IsDevelopment())
    {
        <!-- Tailwind CDN fallback for local rapid iteration (Development only) -->
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                darkMode: 'class',
                theme: {
                    extend: {
                        colors: {
                            table: { felt: '#0f3d2e', edge: '#062017' },
                            accent: { win: '#16a34a', lose: '#dc2626', push: '#fbbf24' }
                        },
                        boxShadow: { card: '0 4px 10px rgba(0,0,0,0.45)' }
                    }
                }
            };
        </script>
    }
</head>
<body class="min-h-full flex flex-col felt-bg">
        <div class="flex items-center justify-between max-w-3xl mx-auto">
            <div class="flex items-center gap-6">
                <span class="text-2xl font-bold">Blackjack</span>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="flex items-center gap-3">
                        <span class="text-base font-medium text-yellow-300" title="Signed in as">@User.Identity.Name</span>
                        <form method="post" action="/Auth/SignOut" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="px-3 py-1 rounded bg-red-600 hover:bg-red-700 text-white text-base font-medium transition">Sign out</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </header>
    <main role="main" class="flex-1 container mx-auto p-4">
        @RenderBody()
    </main>
    <footer class="p-4 text-center text-xs opacity-70">&copy; @DateTime.UtcNow.Year BlackjackRazor</footer>
    <script src="~/js/site.js" defer></script>
</body>
</html>
