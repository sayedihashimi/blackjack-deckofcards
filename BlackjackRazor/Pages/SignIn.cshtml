@page
@model SignInModel
@{
    ViewData["Title"] = "Sign In";
}
<div class="max-w-md mx-auto mt-10 p-6 bg-green-950/80 border border-yellow-500 rounded-xl shadow-xl">
    <h1 class="text-2xl font-bold mb-4 text-yellow-400">Sign In</h1>
    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Username" class="block text-sm mb-1">Username</label>
            <input asp-for="Username" class="w-full px-3 py-2 rounded bg-green-900 border border-yellow-500 text-yellow-100 focus:outline-none" />
        </div>
        <button type="submit" class="w-full py-2 rounded bg-green-700 hover:bg-green-600 text-yellow-200 font-semibold border border-yellow-500 shadow">Enter Casino</button>
    </form>
</div>
