@page
@model SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="flex flex-col items-center justify-center min-h-screen bg-casinoGreen-950">
    <form method="post" class="bg-casinoGreen-900 p-8 rounded-casino shadow-casino w-full max-w-sm">
        <h2 class="text-2xl font-bold text-yellow-400 mb-6 text-center">Sign In</h2>
        <div class="mb-4">
            <label for="username" class="block text-yellow-400 mb-2">Username</label>
            <input type="text" id="username" name="Username" class="w-full px-4 py-2 rounded-casino border-2 border-gold-500 bg-casinoGreen-950 text-yellow-400 focus:outline-none focus:border-gold-400" required />
        </div>
        <button type="submit" class="button-casino w-full">Sign In</button>
    </form>
</div>
